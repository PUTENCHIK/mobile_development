<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/base_margin"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/minor_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/currency_icon"
            android:layout_width="@dimen/currency_icon_size"
            android:layout_height="@dimen/currency_icon_size"
            android:contentDescription="@string/currency_icon_description"
            android:layout_marginRight="@dimen/base_margin"
            android:src="@drawable/ic_dollar_icon" />

        <TextView
            android:id="@+id/currency_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_font" />

        <TextView
            android:id="@+id/currency_quotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_font"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currency_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/minor_font"
            android:textStyle="italic"
            android:textAlignment="textEnd" />

    </LinearLayout>

</LinearLayout>